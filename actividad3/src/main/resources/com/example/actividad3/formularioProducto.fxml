<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="principalVBox"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.actividad3.FormularioController"
      spacing="20" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Crear Nuevo Producto" style="-fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Label>

    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <GridPane hgap="15" vgap="20">
            <Label text="C贸digo:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtCodigo" promptText="Ingrese el c贸digo del producto"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtProducto" promptText="Ingrese el nombre del producto"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

            <Label text="Descripci贸n:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtDescripcion" promptText="Ingrese la descripci贸n del producto"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

            <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtPrecio" promptText="Ingrese el precio"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

            <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                   style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtCantidad" promptText="Ingrese la cantidad en stock"
                       GridPane.columnIndex="1" GridPane.rowIndex="4"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
            </columnConstraints>
        </GridPane>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>

            <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 5;"/>

            <Button fx:id="btnGuardar" text="Guardar Producto" onAction="#onGuardar"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 5;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
        </HBox>
    </VBox>

</VBox>