<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="principalVBox"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.actividad3.DashboardController"
      spacing="15.0"
      style="-fx-background-color: #f5f7fa;">

    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
    </padding>

    <Label text="Inventario de Productos" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <TableView fx:id="datosTableView" VBox.vgrow="ALWAYS">

        <columns>
            <TableColumn fx:id="codigoCol" prefWidth="100.0" text="Código" />
            <TableColumn fx:id="productoCol" prefWidth="200.0" text="Producto" />
            <TableColumn fx:id="descripcionCol" prefWidth="350.0" text="Descripción" />
            <TableColumn fx:id="precioCol" prefWidth="100.0" text="Precio" />
            <TableColumn fx:id="cantidadCol" prefWidth="100.0" text="Cantidad" />
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>

        <Button text="Eliminar Producto" onAction="#onEliminarProducto"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <Button text="Volver al Menú" onAction="#onCancelar"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </HBox>

</VBox>